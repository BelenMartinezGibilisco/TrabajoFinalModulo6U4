<div class="container containerlogin">
    <div class="row" style="margin: 130px 0">
        <div class="col">
            <form action="/admin/login" method="post">
            <div class="form-group login">
                <input type="text" class="form-control" id="inputUser" placeholder="usuario" name="usuario">
            </div>
            <div class="form-group login">
                <input type="text" class="form-control" id="inputPassword" placeholder="password" name="password">
            </div>
            <button type="submit" class="btn btn-primary butentrar">Entrar</button>
            </form>
            {{#if error}}
                <p>Usuario o clave incorrecto.</p>
            {{/if}}
        </div>
    </div>
</div>